# Base URL of your Nginx Proxy Manager admin (including port)
# e.g. http://localhost:81
NPM_BASE_URL=http://npm.local:81

# Alternatively, derive NPM_BASE_URL from host and port
# NPM_HOST=npm.local
# NPM_PORT=81

# NPM admin credentials
NPM_EMAIL=admin@example.com
NPM_PASSWORD=changeme

# Optional toggles
INCLUDE_REDIRECTS=false
INCLUDE_STREAMS=false

# Refresh interval in seconds
REFRESH_INTERVAL_SECONDS=60

# App server port
PORT=3000

# Basic Auth for the API (/api/services)
# BASIC_AUTH_USER=admin
# BASIC_AUTH_PASS=changeme

# Polling store configuration
# Interval between polls (ms)
POLL_INTERVAL_MS=5000
# Public ports for computing service URLs
PUBLIC_HTTP_PORT=80
PUBLIC_HTTPS_PORT=443
# Page title returned in API response metadata
PAGE_TITLE=Services
# Path to SQLite database containing a `services` table
# SQLITE_DB_PATH=/data/services.db
